<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs')  %>
</head>
<nav>
    <%- include('./partials/nav.ejs')  %>
</nav>
<body>
    <div class="show-container">
        <aside class="show-water">
            <img src="<%= water.img %>" class="show-water" height="600px" width="900px">
        </aside>
        <article class="show-article">
            <h2 class="water-name"><%= water.name %></h2>
            <span class="water-type"><%= water.type %></span><br />
            <p class="water-description"><%= water.description %></p>
            <% if (currentUser) { %>
             <a href="/<%= water._id %>/edit" class="edit-btn">EDIT</a>
             <form action="/<%= water.id %>?_method=DELETE" method="POST">
              <input type="submit" value="DELETE" class="delete-btn"/>
              </form>
            <% } %>
        </article>
    </div>
    <div class="reviews">
        <h2>Reviews</h2>
        <div class="divider"></div>
        <% if (currentUser) { %>
<form id="add-review-form" action="/<%= water._id %>/reviews?_method=PUT" method="POST">
 <label>Review:</label>
 <textarea name="content"></textarea>
 <label>Rating:</label>
 <select name="rating">
   <option value="1">1</option>
   <option value="2">2</option>
   <option value="3">3</option>
   <option value="4">4</option>
   <option value="5">5</option>
   <option value="6">6</option>
   <option value="7">7</option>
   <option value="8">8</option>
   <option value="9">9</option>
   <option value="10">10</option>
 </select>
 <input type="submit" value="Add Review">
</form>
<% } %>
<% if (water.reviews.length) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Review</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% water.reviews.forEach(function(r) { %>
          <tr>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Reviews Yet</h5>
  <% } %>
    </div>
</body>
</html>